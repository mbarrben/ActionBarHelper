<resources>

    <!-- Your app theme needs to be a sherlock one -->
    <style name="AppTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Transparent</item>
        
        <!-- Set action bar overlay true -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar.Transparent" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        
        <!-- Make your action bar background transparent -->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>